import com.toedter.calendar.JDateChooser;
import javax.swing.JTextPane;

public class admin extends JFrame {

	private JPanel contentPane;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					admin frame = new admin();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 * @throws Exception 
	 */
	public admin() throws Exception {
		Connection conn = DbConnection.database();
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 450, 300);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));

		setContentPane(contentPane);
		contentPane.setLayout(null);
		JDateChooser dateChooser = new JDateChooser();
		dateChooser.setBounds(339, 11, 74, 20);
		contentPane.add(dateChooser);
		java.util.Date date = new java.util.Date();
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");
		String cDate = sdf.format(date);
		JTextPane txtpCheck = new JTextPane();
		txtpCheck.setLocation(0, 103);
		txtpCheck.setEditable(false);
		contentPane.add(txtpCheck);
		
		JScrollPane jsp = new JScrollPane(txtpCheck,JScrollPane.VERTICAL_SCROLLBAR_ALWAYS,
		JScrollPane.HORIZONTAL_SCROLLBAR_NEVER);
		jsp.setBounds(53,11,276,200);
		contentPane.add(jsp);
		JButton btnReport = new JButton("Report");
		
		btnReport.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				LocalDate lt = LocalDate.now();
				String file_name= "C:\\Users\\leeli\\OneDrive\\Desktop\\LiRong INTI\\SE\\Visitor_Report\\Report.pdf";
				Document document = new Document();
				String tryDate = "2022-11-10";
				
				try {
					
					PdfWriter.getInstance(document, new FileOutputStream(file_name));
					document.open();
					PreparedStatement ps = conn.prepareStatement("select* from user_request where dov = ? order by ticketId desc");
					ps.setDate(1,Date.valueOf(tryDate) );
					ResultSet rs = ps.executeQuery();
					
					while(rs.next()) {
						String dateVisit = rs.getString("dov");
						System.out.println(dateVisit);
						if(dateVisit.equals(tryDate)) {
							System.out.println("Same date");
						
						
						Paragraph para = new Paragraph(rs.getString("ticketId")+" "+rs.getString("name")+" "+rs.getString("ic")
		     			+" "+rs.getString("phone")+" "+rs.getString("purpose")+" "+rs.getString("tov")+" "+rs.getDate("dov")
					    +" "+rs.getString("entertime")+" "+rs.getString("leavetime")+" "+rs.getString("status")+" "+rs.getString("reason")
						+" "+rs.getString("approvedBy")+" "+rs.getString("managedEnterBy")+" "+rs.getString("managedLeaveBy")
						+" "+rs.getString("managedBy"));
						System.out.println(para);
						txtpCheck.setText(para.toString());
					if(para.toString()==""){
						JOptionPane.showMessageDialog(null, "No record found");
						}
						
							
						
						document.add(para);
						document.add(new Paragraph(" "));
//						
					}else {
						JOptionPane.showMessageDialog(null, "No record found.");
					}
//					
						
					}
					document.close();
					
						
					
					System.out.println(cDate);
					
				} catch (FileNotFoundException e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				} catch (DocumentException e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				}catch (SQLException e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				}

				}
			
		});
		btnReport.setBounds(143, 213, 130, 37);
		contentPane.add(btnReport);
		
		
	}
}
